; -*- clojure -*-
; map funs 

(include "stdlib.ucl")

(defn map_width [map]
  (length (car map)))

(defn map_height [map]
  (length map))

(defn map_get [x y map]
  (nth x (nth y map)))

; must not be called on border
(defn map_get_surroundings [x y map]
  (cons (map_get x (- y 1) map)
	(cons (map_get (+ x 1) map)
	      (cons (map_get x (+ y 1) map)
		    (map_get (- x 1) y map)))))
